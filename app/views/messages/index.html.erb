<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      かんたん保育日報アプリ
    </h2>
    <p class='service-explain'>
      個人別に相談もできる
    </p>
    <p class='service-explain'>
      お子様の成長をもっと近くで見ることが出来ます
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("https://linkmaker.itunes.apple.com/ja-jp/badge-lrg.svg?releaseDate=2011-09-21&kind=iossoftware&bubble=ios_apps", class:"apple-btn"), "#" %>
      <%= link_to image_tag("dl-android.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>

  
  <div class='feature-contents'>
    <h2 class='title'>
      DiaryAppの特徴
    </h2>
    <ul class='feature-lists'>
      <li class='list'>
        <%= image_tag "music_gassyou_kids_world.png", class:"list-pict" %>
        <h3 class='feature-list-text'>
          簡単にお子様の活動を見ることができる
        </h3>
        <p class='feature-list-description'>
          ノートでスタッフとやり取りする手間が省ける
        </p>
      </li>
      <li class='list'>
        <%= image_tag "soudan_setsumei_business_woman.png", class:"list-pict" %>
        <h3 class='feature-list-text'>
          個別にスタッフと相談することも出来ます
        </h3>
        <p class='feature-list-description'>
          チャットルームを作成して相談可能もちろん秘密は遵守します
        </p>
      </li>
      <li class='list'>
        <%= image_tag "youchien_tsuuen_bag.png", class:"list-pict" %>
        <h3 class='feature-list-text'>
          当日の出席も簡単に報告
        </h3>
        <p class='feature-list-description'>
          わざわざ電話しなくてもOKです
        </p>
      </li>
    </ul>
  </div>
  <%# /FURIMAの特徴 %>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>園児の写真</h2>
    <%= link_to '新規投稿', "#", class: "subtitle" %>
    <ul class='item-lists'>

      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <% @messages.each do |message| %>
      <li class='list'>
        <%= link_to message_path(message.id), method: :get do %>
        <div class='item-img-content'>
          <%= image_tag message.image.variant(resize: '500x500'), class: "item-img" %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= message.name %>
          </h3>
          <div class='item-price'>
            <span><%= message.price %>円</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>    
        <% end %>    
      </li>
     <% end %>

      <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>

      <%# 商品がない場合は以下のダミー商品が表示されるようにしましょう %>
      <%# 商品がある場合は表示されないようにしましょう %>
    
      <%# //商品がある場合は表示されないようにしましょう %>
      <%# //商品がない場合は以下のダミー商品が表示されるようにしましょう %>
      <% if @messages.length == 0 %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "youtube_profile_image.png", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            写真を投稿してね！
          </h3>
          <div class='item-price'>
            <span>100円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
       <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to(new_message_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>